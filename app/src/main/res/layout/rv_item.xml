<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/contact_list_recyclerview_profile_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:src="@drawable/sample_0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/contact_list_recyclerview_profile_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="프로필 이름"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/contact_list_recyclerview_profile_icon"
            app:layout_constraintStart_toEndOf="@+id/contact_list_recyclerview_profile_icon"
            app:layout_constraintTop_toTopOf="@+id/contact_list_recyclerview_profile_icon" />

        <ImageView
            android:id="@+id/contact_list_recyclerview_favorites"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="112dp"
            android:layout_marginEnd="50dp"
            android:src="@drawable/ic_star"
            app:layout_constraintBottom_toBottomOf="@+id/contact_list_recyclerview_profile_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/contact_list_recyclerview_profile_name"
            app:layout_constraintTop_toTopOf="@+id/contact_list_recyclerview_profile_name" />


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>