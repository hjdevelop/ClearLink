<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactListFragment"
    android:background="@color/background">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/contact_list_fragment_Text"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:text="연락처"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="#00ff0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <androidx.cardview.widget.CardView
        android:id="@+id/contact_list_fragment_mypage"
        android:layout_width="410dp"
        android:layout_height="90dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/contact_list_fragment_profile_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_user"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/contact_list_fragment_btn_mypage"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginTop="20dp"
            android:background="#00ff0000"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:text="@string/textContactList"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="410dp"
        android:layout_height="450dp"
        android:layout_marginTop="170dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
        android:id="@+id/contact_list_fragment_word"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="10dp"
        android:text="ㄱ"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="#00ff0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

            <androidx.cardview.widget.CardView
                android:id="@+id/contact_list_fragment_contact"
                android:layout_width="410dp"
                android:layout_height="90dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/contact_list_fragment_contact_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_user"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/contact_list_fragment_contact_name"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="65dp"
                    android:layout_marginTop="20dp"
                    android:background="#00ff0000"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:text="@string/userName"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <CheckBox
                    android:id="@+id/contact_list_fragment_contact_favorites"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="350dp"
                    android:layout_marginTop="20dp"
                    />

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/contact_list_fragment_btn_CONTACTadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:layout_marginStart="300dp"
        android:background="@drawable/ic_confirm_button"
        android:text="+"
        android:textSize="50sp"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="650dp"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/contact_list_fragment_btn_CONTACT"
            android:layout_width="190dp"
            android:layout_height="80dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:background="@drawable/ic_confirm_button"
            android:text="CONTACT"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/contact_list_fragment_btn_MYPAGE"
            android:layout_width="190dp"
            android:layout_height="80dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:background="@drawable/ic_confirm_button"
            android:text="MYPAGE"
            android:textColor="@color/white" />

    </LinearLayout>


</FrameLayout>